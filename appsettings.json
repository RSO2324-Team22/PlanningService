{
  "Serilog": {
    "Using": [ 
      "Serilog.Sinks.Graylog",
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Confluent.Kafka.Producer": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "Graylog",
        "Args": {
            "hostnameOrAddress": "localhost",
            "port": "12201",
            "transportType": "Udp"
        }
      },
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "Kafka": {
    "transactional.id": "planningservice"
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PlanningDatabase": "Database=planningservice; Data Source=localhost:5432; User Id=postgres; Password=postgres;"
  },
}
